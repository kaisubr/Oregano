<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="25dp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.github.kaisubr.oregano.Setup"
>
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Welcome to Oregano!"
            android:shadowColor="#444"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:textSize="30sp"
            android:id="@+id/welcometv"
            android:justificationMode="inter_word"
            android:textAlignment="center"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Select an option to begin setting up a budget."
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_below="@id/welcometv"
            android:layout_marginTop="70dp"
            android:id="@+id/selectoptiontv"
    />

    <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Automatically generate budget"
            android:layout_centerHorizontal="true"
            android:padding="30dp"
            android:textSize="15sp"
            android:layout_below="@id/selectoptiontv"
            android:layout_marginTop="20dp"
            android:id="@+id/autobutton"
    />

    <Button
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Manually enter a budget"
            android:layout_centerHorizontal="true"
            android:padding="30dp"
            android:textSize="15sp"
            android:layout_below="@id/autobutton"
            android:id="@+id/manualbutton"
    />
</RelativeLayout>
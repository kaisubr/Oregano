<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="#ffffff"
        tools:context="io.github.kaisubr.oregano.Setup"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:layout_alignBottom="@+id/relativeLayout" android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Welcome to Oregano!"
                android:shadowColor="#444"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:textSize="30sp"
                android:id="@+id/welcometv"
                android:textAlignment="center"/>
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp" app:srcCompat="@drawable/ic_launcherhi"
                android:id="@+id/imageView2"
                android:layout_marginTop="17dp" android:layout_below="@+id/welcometv"
                android:layout_centerHorizontal="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/wavy"
                android:rotation="90"
                android:alpha="0.5"
                android:id="@+id/imageView3"
                android:layout_marginBottom="116dp"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp" android:id="@+id/relativeLayout"
            android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            android:padding="25dp"
    >

        <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_labelColor="#666"
                app:mtf_image="@drawable/ic_launcherhi"
                android:layout_marginBottom="24dp" android:id="@+id/materialTextField"
                android:layout_above="@+id/selectoptiontv" android:layout_alignParentStart="true">

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColor="#333"
                    android:id="@+id/nameId"
                    android:textSize="15sp"/>
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="What do you go by?"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:id="@+id/selectoptiontv2"
                    android:layout_marginBottom="8dp"
                    android:layout_above="@+id/materialTextField" android:layout_centerHorizontal="true"/>

        </com.github.florent37.materialtextfield.MaterialTextField>
        <Button
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Manually enter a budget"
                android:padding="15dp"
                android:textSize="15sp"
                android:id="@+id/manualbutton"
                android:layout_alignParentBottom="true" android:layout_alignStart="@+id/autobutton"/>
        <Button
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Automatically generate budget"
                android:padding="15dp"
                android:textSize="15sp"
                android:id="@+id/autobutton"
                android:layout_above="@+id/manualbutton" android:layout_alignParentEnd="true"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Next, select an option to begin setting up a budget."
                android:fontFamily="sans-serif-condensed"
                android:textSize="15sp"
                android:textStyle="italic"
                android:id="@+id/selectoptiontv"
                android:layout_marginBottom="9dp" android:layout_above="@+id/autobutton"
                android:layout_alignParentStart="true"/>
    </RelativeLayout>

</RelativeLayout>